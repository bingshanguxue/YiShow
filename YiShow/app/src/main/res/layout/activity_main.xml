<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- your content layout -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/et_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:hint="@string/hint_et_message"/>

                <Button
                    android:id="@+id/button_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_send"
                    android:layout_below="@+id/et_message"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>

                <Button
                    android:id="@+id/button_onekey_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_onekey_share"
                    android:layout_below="@+id/button_send"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>

                <Button
                    android:id="@+id/button_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/share_webpage_to_session"
                    android:layout_below="@+id/button_onekey_share"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>


                <Button
                    android:id="@+id/button_webpage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/share_webpage_to_timeline"
                    android:layout_below="@+id/button_share"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button_test_0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="test"
                        android:layout_below="@+id/button_webpage"
                        android:layout_marginTop="@dimen/activity_vertical_margin"/>

                    <Button
                        android:id="@+id/button_test_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="test"
                        android:layout_below="@+id/button_webpage"
                        android:layout_marginTop="@dimen/activity_vertical_margin"/>
                </LinearLayout>

                <!--满分家园发布-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/et_mfh_release_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="4"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:hint="请输入链接地址"/>

                    <Button
                        android:id="@+id/btn_mfh_release"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/button_send"
                        android:layout_below="@+id/et_message"
                        android:layout_marginTop="@dimen/activity_vertical_margin"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <!--(option)
            app:headerLayout="@layout/drawer_header"-->
        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/navigation_drawer"/>
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>
